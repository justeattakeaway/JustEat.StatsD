# editorconfig.org
root = true

[*]
indent_style = space
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2

[*.cs]
csharp_style_namespace_declarations = file_scoped:warning
indent_size = 4

[*.{csproj,json,props,ruleset,targets}]
indent_size = 2

[*.lock]
end_of_line = lf

[*.sln]
indent_style = tab
